<h1>Recipes of <%= @search %></h1>

<table>
	<tr>
		<td>Image</td>
		<td>Title</td>
		<td>Social Rank</td>
	</tr>
	<% @recipes.each do |recipe| %>
	<tr>
		<td><%= link_to image_tag(recipe['image_url'], alt: "recipe image", width: '100', height: '100'), recipe['source_url'] %></td>
		<td><%= link_to sanitize(recipe['title']), recipe['source_url'] %></td>
		<td><%= recipe['social_rank'] %></td>
	</tr>
	<% end %>
